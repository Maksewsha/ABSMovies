<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ABSMovies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/middle</item>
        <item name="colorPrimaryVariant">@color/middle_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/middle_dark</item>
        <item name="colorSecondaryVariant">@color/middle</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="fontFamily">@font/montserratmedium</item>
        <item name="bottomNavigationStyle">@font/montserratmedium</item>
    </style>

    <style name="Theme.ABSMovies.MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?colorSecondary</item>
        <item name="android:textColor">@color/whiteDark</item>
    </style>

    <style name="Theme.ABSMovies.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:paddingTop">3dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="android:layout_width">350dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>